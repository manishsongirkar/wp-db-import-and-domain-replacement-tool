#compdef wp-db-import

# ===============================================
# Zsh Completion for wp-db-import command
# ===============================================
## Zsh Completion Script for the `wp-db-import` command.
##
## This script provides tab completion for the command and its options
## in the Zsh shell environment, enhancing usability and speed.
##
#
# Installation:
#   This file is automatically sourced when wp-db-import is installed
#
# Usage:
#   wp-db-import <TAB>  # Shows all available commands
#   wp-db-import conf<TAB>  # Completes to config-* commands
#

## @brief Provides Zsh completions for the `wp-db-import` command.
##
## This function uses the standard Zsh completion system to describe the
## available subcommands for `wp-db-import` by listing them and their descriptions.
##
## @param $@ Standard Zsh completion arguments.
_wp_db_import() {
    local context state state_descr line
    local -a commands

    commands=(
        'config-show:Show current configuration'
        'config-create:Create new configuration file'
        'config-validate:Validate configuration file'
        'config-edit:Open configuration in editor'
        'show-links:Show local site links'
        'setup-proxy:Setup stage file proxy'
        'show-cleanup:Generate revision cleanup commands'
        'update:Update to latest version'
        'version:Show version info'
        'test:Run test suite to validate tool functionality'
        '--help:Show help'
    )

    case $words[1] in
        wp-db-import)
            _describe 'wp-db-import commands' commands
            ;;
    esac
}

_wp_db_import "$@"
